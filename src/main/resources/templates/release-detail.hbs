{{#partial "content"}}
{{#if release.isInCollection}}
    <div class="form-group d-flex justify-content-end">
        <button class="btn btn-edit" type="button" name="button">Edit</button>
    </div>
    <div class="row">
        <div class="col-12 col-lg-6 col-xl-4">
            <div class="detail-cover-image"><img src="{{release.imageUrl}}"></div>
            <h1 class="page-title">{{release.title}}</h1>
            <div class="d-flex justify-content-start align-items-center">
                {{#each artists}}
                    <div class="artist-thumbnail"><img src="{{imageUrl}}"></div>
                    <h1>{{name}}</h1>
                {{/each}}
            </div>
            <h6>{{release.label}} {{release.labelNumber}}</h6>
            <h3>Tracks</h3>
            <ol class="track-list">
                {{#each tracks}}
                    <li>
                        <span class="d-flex justify-content-between align-items-center">
                            {{title}}
                            <button class="btn btn-delete" type="submit">X</button>
                        </span>
                    </li>
                {{/each}}
            </ol>
            <form class="form-group d-flex align-items-center" action="/releases/{{release.id}}/tracks" method="post">
                <input class="form-control" type="text" name="title">
                <button class="btn btn-edit" type="submit">Add Track</button>
            </form>
        </div>
        <!-- 2ND COLUMN -->
        <div class="col-12 col-lg-6 col-xl-8">
            <div class="row">
                <div class="col">
                    <h4>Media</h4>
                    <h6><strong>TYPE</strong>: {{release.mediaType}}</h6>
                    <h6><strong>CONDITION</strong>: {{mediaCondition}}</h6>
                </div>
                <div class="col">
                    <h4>Sleeve</h4>
                    <h6><strong>TYPE</strong>: {{release.sleeveType}}</h6>
                    <h6><strong>CONDITION</strong>: {{sleeveCondition}}</h6>
                </div>
            </div>
            <h4>Purchase</h4>
            <h6>Date: {{release.datePurchased}}</h6>
            <h6>Seller: {{release.seller}}</h6>
            <h6>Price: ${{release.price}}</h6>
            <h4>Notes</h4>
            {{#each notes}}
                <p>
                    <span class="d-flex justify-content-between">
                        {{formattedCreatedAt}}: {{content}}
                        <button class="btn btn-delete" type="submit">X</button>
                    </span>
                </p>
            {{/each}}
            <form class="form-group d-flex align-items-center" action="/releases/{{release.id}}/notes" method="post">
                <input class="form-control" type="text" name="content">
                <button class="btn btn-edit" type="submit">Add Note</button>
            </form>
            <div class="d-flex justify-content-end">
                <h6 class="cratemate-social-heading">Mates who own this album</h6>
            </div>
            <div class="d-flex justify-content-end">
                <div class="cratemate-thumbnail"><img src="/images/matt-m.jpeg"></div>
                <div class="cratemate-thumbnail"><img src="/images/matt-m.jpeg"></div>
                <div class="cratemate-thumbnail"><img src="/images/matt-m.jpeg"></div>
            </div>
        </div>
    </div>
{{else}}
    <div class="d-flex justify-content-end">
        <button class="btn btn-edit" type="button" name="button">Edit</button>
    </div>
    <div class="row">
        <div class="col">
            <div class="detail-cover-image"><img src="{{release.imageUrl}}"></div>
            <h1 class="page-title">{{release.title}}</h1>
            <div class="d-flex justify-content-start align-items-center">
                {{#each artists}}
                    <div class="artist-thumbnail"><img src="{{imageUrl}}"></div>
                    <h1>{{name}}</h1>
                {{/each}}
            </div>
            <h6>{{release.label}} {{release.labelNumber}}</h6>
            <h3>Tracks</h3>
            <ol>
                {{#each tracks}}
                    <li>{{title}}</li>
                {{/each}}
            </ol>
            <form action="/releases/{{release.id}}/tracks" method="post">
                <input type="text" name="title">
                <button type="submit">Add Track</button>
            </form>
        </div>
        <!-- 2ND COLUMN -->
        <div class="col">
            <div class="row">
                <div class="col">
                    <h3>Media</h3>
                    <h6>Type: {{release.mediaType}}</h6>
                </div>
                <div class="col">
                    <h3>Sleeve</h3>
                    <h6>Type: {{release.sleeveType}}</h6>
                </div>
            </div>
            <h3>Notes:</h3>
            {{#each notes}}
                <p>{{formattedCreatedAt}}: {{content}}</p>
            {{/each}}
            <form action="/releases/{{release.id}}/notes" method="post">
                <input type="text" name="content">
                <button type="submit">Add Note</button>
            </form>
            <div class="d-flex justify-content-end">
                <h6 class="cratemate-social-heading">Mates who own this album</h6>
            </div>
            <div class="d-flex justify-content-end">
                <div class="cratemate-thumbnail"></div>
                <div class="cratemate-thumbnail"></div>
                <div class="cratemate-thumbnail"></div>
            </div>
        </div>
    </div>
{{/if}}


