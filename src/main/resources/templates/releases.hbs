    </div>
    <form>
        <div class="form-group d-flex">
            <input class="form-control" type="text" name="search" value="">
            <button class="btn btn-submit search" type="submit">Search</button>
        </div>
    </form>
</div>

<div class="collection-grid">
    {{#each releasesWithArtists}}
        <div class="album">
            <a href="/releases/{{@key.id}}"><img src="{{@key.imageUrl}}">
                <div class="overlay d-flex justify-content-center align-items-center flex-column">
                    {{#each this}}
                        <h4>{{name}}</h4>
                    {{/each}}
                    <p>{{@key.title}}</p>
                </div>
            </a>
        </div>
    {{/each}}
</div>
{{/if}}


