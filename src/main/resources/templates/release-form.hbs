{{#partial "content"}}

{{#if editArtist}}
    <form class="form-container" action="/artists/{{editArtist.id}}/update" method="post">
        <h2>Artist</h2>
        <div class="form-group">
            <label>Artist Name</label>
            <input class="form-control" list="artist-list" name="artistName" value="{{editArtist.name}}">
        </div>
        <div class="form-group">
            <label>Artist Image URL</label>
            <input class="form-control" type="text" name="artistImageUrl" value="{{editArtist.imageUrl}}">
        </div>
        <div class="d-flex justify-content-center">
            <a href="/artists/{{editArtist.id}}"><button class="btn btn-cancel" type="button">Cancel</button></a>
            <button class="btn btn-submit" type="submit">Submit</button>
        </div>
    </form>

    {{else if editRelease}}
    <form class="form-container" action="/releases/{{editRelease.id}}/update" method="post">
        <h2>Album</h2>
        <div class="form-group">
            <div class="form-check">
                <input type="radio" name="isInCollection" value="true" checked>
                <label>Collection</label>
            </div>
            <div class="form-check">
                <input type="radio" name="isInCollection" value="false">
                <label>Wishlist</label>
            </div>
        </div>
        <div class="form-group">
            <label>Album Name</label>
            <input class="form-control" type="text" name="title" value="{{editRelease.title}}">
        </div>
        <div class="form-group">
            <label>Album Image URL</label>
            <input class="form-control" type="text" name="releaseImageUrl" value="{{editRelease.imageUrl}}">
        </div>
        <div class="d-flex justify-content-between indent">
            <div class="form-group">
                <label>Record Label</label>
                <input class="form-control" type="text" name="label" value="{{editRelease.label}}">
            </div>
            <div class="form-group">
                <label>Catalog Number</label>
                <input class="form-control" type="text" name="labelNumber" value="{{editRelease.labelNumber}}">
            </div>
        </div>
        <div class="d-flex justify-content-between indent">
            <div class="form-group">
                <label>Media Type</label>
                <select class="custom-select form-control" name="mediaType" required>
                    <option selected></option>
                    <option value="Single">Single</option>
                    <option value='12" Single'>12" Single</option>
                    <option value='LP'>LP</option>
                    <option value="EP">EP</option>
                    <option value='12" EP'>12" EP</option>
                    <option value='10"'>10"</option>
                    <option value="78 RPM">78 RPM</option>
                    <option value="Other">Other</option>
                </select>
            </div>
            <div class="form-group">
                <label>Sleeve Type</label>
                <select class="custom-select form-control" name="sleeveType" required>
                    <option selected></option>
                    <option value="Picture Sleeve">Picture Sleeve</option>
                    <option value="Company Sleeve">Company Sleeve</option>
                    <option value="Brown Sleeve">Brown Sleeve</option>
                    <option value="LP Jacket">LP Jacket</option>
                    <option value="Plain Sleeve">Plain Sleeve</option>
                    <option value="Other">Other</option>
                </select>
            </div>
        </div>
        <div class="d-flex justify-content-between indent">
            <div class="form-group">
                <label>Media Condition</label>
                <select class="custom-select form-control" name="mediaCondition">
                    <option selected value="0"></option>
                    <option value="6">Near Mint</option>
                    <option value="5">Very Good Plus</option>
                    <option value="4">Very Good</option>
                    <option value="3">Very Good Minus</option>
                    <option value="2">Good</option>
                    <option value="1">Poor</option>
                </select>
            </div>
            <div class="form-group">
                <label>Sleeve Condition</label>
                <select class="custom-select form-control" name="sleeveCondition">
                    <option selected value="0"></option>
                    <option value="6">Near Mint</option>
                    <option value="5">Very Good Plus</option>
                    <option value="4">Very Good</option>
                    <option value="3">Very Good Minus</option>
                    <option value="2">Good</option>
                    <option value="1">Poor</option>
                </select>
            </div>
        </div>
        <div class="d-flex justify-content-around">
            <div class="form-group">
                <label>Purchase Date</label>
                <input class="form-control date-input" type="date" name="datePurchased" value="{{editRelease.datePurchased}}">
            </div>
            <div class="form-group">
                <label>Price</label>
                <input class="form-control" type="number" step=".01" name="price" value="{{editRelease.price}}">
            </div>
            <div class="form-group">
                <label>Seller</label>
                <input class="form-control" type="text" name="seller" value="{{editRelease.seller}}">
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <a href="/releases/{{editRelease.id}}"><button class="btn btn-cancel" type="button">Cancel</button></a>
            <button class="btn btn-submit" type="submit">Submit</button>
        </div>
    </form>

